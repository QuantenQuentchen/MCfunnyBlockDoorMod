<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20/owo-ui.xsd">
    <components>
        <flow-layout direction="horizontal">
            <children>
                <flow-layout direction="vertical" id="side-menu">
                    <margins>
                        <top>10</top>
                    </margins>
                    <horizontal-alignment>center</horizontal-alignment>
                    <children>
                        <button>
                            <text>Permissions</text>
                        </button>
                        <button>
                            <text>Area</text>
                        </button>
                    </children>
                    <padding>
                        <all>5</all>
                    </padding>
                    <surface>
                        <tooltip/>
                    </surface>
                    <sizing>
                        <horizontal method="fixed">50</horizontal>
                    </sizing>
                </flow-layout>

                <flow-layout direction="vertical" id="main">
                    <margins>
                        <top>5</top>
                    </margins>
                    <children>
                        <scroll direction="vertical">
                            <flow-layout direction="vertical" id="scroll-container">
                                <children>
                                </children>
                                <vertical-alignment>center</vertical-alignment>
                                <horizontal-alignment>center</horizontal-alignment>
                            </flow-layout>
                            <scrollbar-thiccness>10</scrollbar-thiccness>
                            <scrollbar-color>#ff0000</scrollbar-color>
                            <padding>
                                <all>10</all>
                            </padding>
                            <surface>
                                <panel-inset/>
                            </surface>
                            <sizing>
                                <horizontal method="fixed">212</horizontal>
                                <vertical method="fill">50</vertical>
                            </sizing>
                            <vertical-alignment>center</vertical-alignment>
                            <horizontal-alignment>center</horizontal-alignment>
                        </scroll>

                        <flow-layout direction="horizontal" id="PlayerPicker">
                            <children>
                                <texture texture="" texture-width="8" texture-height="8" u="0" v="0" region-width="8" region-height="8">
                                    <blend>true</blend>
                                    <tooltip-text>Player Icon</tooltip-text>
                                    <margins>
                                        <right>5</right>
                                    </margins>
                                    <sizing>
                                        <horizontal method="fixed">24</horizontal>
                                        <vertical method="fixed">24</vertical>
                                    </sizing>
                                </texture>
                                <text-area id="player-username-textbox">
                                    <tooltip-text>Enter Player</tooltip-text>
                                    <sizing>
                                        <horizontal method="fixed">100</horizontal>
                                        <vertical method="fixed">20</vertical>
                                    </sizing>
                                    <margins>
                                        <right>5</right>
                                    </margins>
                                </text-area>
                                <button id="add-player-button">
                                    <text>Add Player</text>
                                </button>
                            </children>
                            <padding>
                                <all>5</all>
                            </padding>
                            <vertical-alignment>center</vertical-alignment>
                            <surface>
                                <panel/>
                            </surface>
                        </flow-layout>
                    </children>
                    <padding>
                        <top>10</top>
                    </padding>
                    <vertical-alignment>top</vertical-alignment>
                    <horizontal-alignment>center</horizontal-alignment>
                    <surface>
                        <panel/>
                    </surface>
                    <sizing>
                        <horizontal method="content">10</horizontal>
                        <vertical method="content">5</vertical>
                    </sizing>
                </flow-layout>

                <flow-layout direction="vertical">
                    <margins>
                        <top>10</top>
                    </margins>
                    <children></children>
                    <sizing>
                        <horizontal method="fixed">50</horizontal>
                    </sizing>
                </flow-layout>
                <!--
                <button>
                    <text>Test</text>
                </button>
                -->

            </children>
            <sizing>
                <horizontal method="fill">100</horizontal>
                <vertical method="fill">100</vertical>
            </sizing>
            <horizontal-alignment>center</horizontal-alignment>
            <vertical-alignment>top</vertical-alignment>
            <surface>
                <vanilla-translucent/>
            </surface>
            <allow-overflow>false</allow-overflow>
        </flow-layout>
    </components>
    
    <templates>
        <template name="player-permission-template">
            <flow-layout id="player-permission-entry-{{player-uuid}}" direction="horizontal">
                <children>
                    <texture texture="{{player-texture}}" texture-width="8" texture-height="8" u="0" v="0" region-width="8" region-height="8">
                        <blend>true</blend>
                        <tooltip-text>{{player-name}}</tooltip-text>
                        <margins>
                            <right>5</right>
                        </margins>
                        <sizing>
                            <horizontal method="fixed">24</horizontal>
                            <vertical method="fixed">24</vertical>
                        </sizing>
                    </texture>
                    <checkbox id="build-checkbox-{{player-uuid}}">
                        <tooltip-text>Build</tooltip-text>
                    </checkbox>
                    <checkbox id="use-checkbox-{{player-uuid}}">
                        <tooltip-text>Use</tooltip-text>
                    </checkbox>
                    <checkbox id="break-checkbox-{{player-uuid}}">
                        <tooltip-text>Break</tooltip-text>
                    </checkbox>
                    <checkbox id="teleport-checkbox-{{player-uuid}}">
                        <tooltip-text>Teleport</tooltip-text>
                    </checkbox>
                    <checkbox id="admin-checkbox-{{player-uuid}}">
                        <tooltip-text>Admin</tooltip-text>
                    </checkbox>
                    <stack-layout>
                        <children>
                            <button>
                                <sizing>
                                    <horizontal method="fill">100</horizontal>
                                    <vertical method="fill">100</vertical>
                                </sizing>
                            </button>
                            <texture texture="funnyblockdoormod:textures/gui/icons/trash.png" u="0" v="0"
                                     texture-width="16" texture-height="16" region-width="16" region-height="16">
                                <blend>true</blend>
                            </texture>
                        </children>
                        <horizontal-alignment>center</horizontal-alignment>
                        <vertical-alignment>center</vertical-alignment>
                        <sizing>
                            <horizontal method="fixed">20</horizontal>
                            <vertical method="fixed">20</vertical>
                        </sizing>
                        <tooltip-text>Remove</tooltip-text>
                    </stack-layout>
                </children>
                <padding>
                    <all>5</all>
                </padding>
                <vertical-alignment>center</vertical-alignment>
                <surface>
                    <panel/>
                </surface>
                <sizing>
                    <horizontal method="content">0</horizontal>
                    <vertical method="content">0</vertical>
                </sizing>
            </flow-layout>
        </template>
        <template name="force-field-area-template">
            <flow-layout id="force-field-area-entry-{{area-uuid}}" direction="vertical">
                <children>
                    <label id="force-field-area-name-{{area-uuid}}">
                        <text>{{area-name}}</text>
                        <tooltip-text>Area Name</tooltip-text>
                        <sizing>
                        </sizing>
                    </label>
                    <flow-layout direction="horizontal">
                        <children>
                            <discrete-slider min="0.0" max="100.0">
                                <decimal-places>2</decimal-places>
                                <tooltip-text>Collapse Threshold</tooltip-text>
                                <sizing>
                                    <horizontal method="fixed">100</horizontal>
                                </sizing>
                            </discrete-slider>
                            <color-picker id="area-color-picker-{{area-uuid}}">
                                <tooltip-text>Area Color</tooltip-text>
                                <sizing>
                                    <horizontal method="fixed">20</horizontal>
                                    <vertical method="fixed">20</vertical>
                                </sizing>
                            </color-picker>
                            <stack-layout>
                                <children>
                                    <button id="activate-area-button-{{area-uuid}}">
                                        <sizing>
                                            <horizontal method="fill">100</horizontal>
                                            <vertical method="fill">100</vertical>
                                        </sizing>
                                    </button>
                                    <texture texture="funnyblockdoormod:textures/gui/icons/checkmark.png" u="0" v="0"
                                             texture-width="14" texture-height="13" region-width="14" region-height="13">
                                        <blend>true</blend>
                                    </texture>
                                </children>
                                <horizontal-alignment>center</horizontal-alignment>
                                <vertical-alignment>center</vertical-alignment>
                                <sizing>
                                    <horizontal method="fixed">20</horizontal>
                                    <vertical method="fixed">20</vertical>
                                </sizing>
                                <tooltip-text>Activate Field</tooltip-text>
                            </stack-layout>
                            <stack-layout>
                                <children>
                                    <button id="show-area-button-{{area-uuid}}">
                                        <sizing>
                                            <horizontal method="fill">100</horizontal>
                                            <vertical method="fill">100</vertical>
                                        </sizing>
                                    </button>
                                    <texture texture="funnyblockdoormod:textures/gui/icons/eye.png" u="0" v="0"
                                             texture-width="16" texture-height="8" region-width="16" region-height="8">
                                        <blend>true</blend>
                                    </texture>
                                </children>
                                <horizontal-alignment>center</horizontal-alignment>
                                <vertical-alignment>center</vertical-alignment>
                                <sizing>
                                    <horizontal method="fixed">20</horizontal>
                                    <vertical method="fixed">20</vertical>
                                </sizing>
                                <tooltip-text>Show Area</tooltip-text>
                            </stack-layout>
                            <stack-layout>
                                <children>
                                    <button id="remove-area-button-{{area-uuid}}">
                                        <sizing>
                                            <horizontal method="fill">100</horizontal>
                                            <vertical method="fill">100</vertical>
                                        </sizing>
                                    </button>
                                    <texture texture="funnyblockdoormod:textures/gui/icons/trash.png" u="0" v="0"
                                             texture-width="16" texture-height="16" region-width="16" region-height="16">
                                        <blend>true</blend>
                                    </texture>
                                </children>
                                <horizontal-alignment>center</horizontal-alignment>
                                <vertical-alignment>center</vertical-alignment>
                                <sizing>
                                    <horizontal method="fixed">20</horizontal>
                                    <vertical method="fixed">20</vertical>
                                </sizing>
                                <tooltip-text>Delete Area</tooltip-text>
                            </stack-layout>
                        </children>
                    </flow-layout>
                </children>
                <margins><all>5</all></margins>
                <surface><panel/></surface>
                <padding><all>5</all></padding>
                <sizing>
                    <vertical method="fixed">40</vertical>
                    <horizontal method="fixed">210</horizontal>
                </sizing>
            </flow-layout>
        </template>
    </templates>
</owo-ui>